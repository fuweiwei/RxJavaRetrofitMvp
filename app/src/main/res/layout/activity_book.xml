<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.veer.rx.ui.main.MainActivity">
    <com.veer.rx.widget.FrameLayout4Loading
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_book"
                android:text="GO"
                android:layout_height="wrap_content" />
        </ScrollView>

    </com.veer.rx.widget.FrameLayout4Loading>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/switch_assistant"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:backgroundTint="#00b4a0"
        android:src="@mipmap/icon_switch_white"
        app:borderWidth="0dp"
        android:visibility="visible"
        />
</RelativeLayout>
